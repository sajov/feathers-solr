{
  "name": "feathers-solr",
  "description": "A service plugin for Solr",
  "version": "3.0.0",
  "keywords": [
    "feathers",
    "feathers-plugin",
    "solr",
    "solr-client"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/sajov/feathers-solr.git"
  },
  "author": {
    "name": "sajov"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/sajov/feathers-solr/issues"
  },
  "engines": {
    "node": ">= 16"
  },
  "main": "lib/",
  "scripts": {
    "prepublish": "npm run compile",
    "lint": "eslint src/**/*.ts test/**/*.ts --fix",
    "compile": "shx rm -rf lib/ && tsc",
    "test": "npm run compile && npm run mocha",
    "mocha": "mocha --config .mocharc.json --recursive test/**.test.ts test/**/*.test.ts",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha",
    "travis": "node_modules/.bin/istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --colors --reporter spec test/"
  },
  "directories": {
    "lib": "lib"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.0-pre.14",
    "@feathersjs/commons": "^5.0.0-pre.14",
    "@feathersjs/errors": "^5.0.0-pre.14",
    "@feathersjs/feathers": "^5.0.0-pre.14"
  },
  "devDependencies": {
    "@feathersjs/adapter-tests": "^5.0.0-pre.14",
    "@feathersjs/feathers": "^5.0.0-pre.14",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^9.1.3",
    "shx": "^0.3.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
